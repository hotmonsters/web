.costume-editor-wrapper
    @media (max-width: 6in)
        margin: 3em
    margin: 5em
    position: fixed
    top: 0px
    bottom: 0px
    left: 0px
    right: 0px

.costume-editor
    article
        overflow-y: scroll
        height: 100%
        padding-top: 5em

        &.loading
            font-family: 'Averia Sans Libre'
            color: #999
            height: 100%
            display: flex
            flex-direction: column
            align-items: center
            justify-content: center

        .top-part
            flex: 1
            display: flex
            flex-direction: row
            align-items: center
            justify-content: space-between

            > div
                width: 100%

            .preview
                display: flex
                align-items: flex-start
                justify-content: flex-end
                font-size: 30px

            .editor
                display: flex
                flex-direction: row
                align-items: flex-start
                justify-content: flex-start
        .contributor
            flex-direction: column
            display: flex
            align-items: center
            justify-content: center



.monster-editor
    input
        display: block
        font-family: 'monsters'
        font-size: 20px
        height: 24px

        padding-left: 1em

.plaintext
    font-family: monospace !important

.guide
    /*
    position: fixed
    background-color: white
    bottom: 0
    left: 0
    right: 0
    */
    flex: 1
    display: flex
    flex-wrap: wrap
    font-size: 24px
    align-items: center
    justify-content: center
    padding-bottom: 1em


.guide-glyph
    padding: 7px
    display: flex
    align-items: center
    justify-content: center

    .monster-typeface
        font-family: 'monsters'

    div
        width: 24px
        height: 24px

